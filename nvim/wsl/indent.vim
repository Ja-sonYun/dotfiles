" indent setup

autocmd BufNewFile,BufRead *.tsx,*.jsx set filetype=typescriptreact

autocmd Filetype html setlocal ts=2 sw=2 expandtab
autocmd Filetype vue setlocal ts=2 sw=2 expandtab
autocmd Filetype css setlocal ts=2 sw=2 expandtab
autocmd Filetype typescript setlocal ts=2 sw=2 expandtab
autocmd Filetype typescriptreact setlocal ts=2 sw=2 expandtab
autocmd Filetype javascript setlocal ts=2 sw=2 sts=0 expandtab
autocmd Filetype json setlocal ts=2 sw=2 sts=0 expandtab
autocmd Filetype yaml setlocal ts=4 sw=4 sts=0 expandtab
autocmd Filetype NvimTree setlocal ts=2 sw=2
autocmd Filetype vim setlocal ts=2 sw=2 expandtab
